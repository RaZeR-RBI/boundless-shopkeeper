{
	"compilerOptions": {
		"outDir": "./built/",
		"sourceMap": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"lib": [
			"es2015",
			"dom"
		],
		"allowJs": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/**/*"
	]
}